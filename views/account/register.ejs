<h1><%- title %></h1>
<%- messages() %>
<form class="account" action="/account/register" method="post">
    <label>First name<input type="text" name="account_firstname" required></label>
    <label>Last name<input type="text" name="account_lastname" required></label>
    <label>Email address<input type="email" name="account_email" required placeholder="Enter a valid email address"></label>
    <label>Password<input type="password" name="account_password" id="password" required></label>
    <input type="submit" value="REGISTER">
</form>