<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <%  }) %>
    </ul>
<% } %>

<form class="account" action="/inv/add-classification" method="post">
    <label>Classification:<input type="text" name="classification_name" required value="<%= locals.classification_name %>" pattern="[a-zA-Z]+"></label>
    <span>Required. Cannot contain spaces or special characters.</span>
    <input type="submit" value="Add">

</form>